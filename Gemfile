# for a site powered by GitHub Pages, use the following line and configure
# bundled jekyll plugins found at https://pages.github.com/versions/
gem "github-pages", "~> 207", group: :jekyll_plugins
# specify a jekyll theme; minima is the default
# gem "minima", "~> 2.5"
gem "minimal-mistakes-jekyll", "~> 4.20.2"
# specify additional plugins; add matching items to the plugins list in _config.yml
group :jekyll_plugins do
    gem "jekyll-archives"
    gem "jekyll-include-cache"  # required by minimal-mistakes-jekyll theme
end
